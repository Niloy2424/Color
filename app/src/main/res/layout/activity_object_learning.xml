<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_object_learning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/back1"
    tools:context="com.example.administrator.color.ObjectLearningActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/redtv"
            android:id="@+id/rootLn">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/ic_chevron_left_black_24dp"
                android:id="@+id/leftButton"
                android:onClick="leftButton"/>

            <TextView
                android:id="@+id/colorchangeTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="RED"
                android:gravity="center"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                />

            <Button
                android:id="@+id/rightButton"
                android:onClick="rightButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@drawable/ic_volume_up_black_24dp"
            android:id="@+id/button7" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
       >

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/imageGride"
            android:numColumns="3"
            android:horizontalSpacing="6dp"
            android:verticalSpacing="6dp"
            android:layout_gravity="center"
            android:gravity="center"
            ></GridView>


    </LinearLayout>

</LinearLayout>
